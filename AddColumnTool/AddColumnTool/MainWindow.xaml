<Window x:Class="AddColumnTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddColumnTool"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="A5SQLカラム追加ツール" Height="150" Width="500">
    <Grid>
        <Label Content="a5erファイル" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFileName" HorizontalAlignment="Left" Margin="82,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="btnSelectFile" Content="ファイル選択" HorizontalAlignment="Left" Margin="387,12,0,0" VerticalAlignment="Top" Width="80" Click="btnSelectFile_Click"/>
        <Button x:Name="btnExec" Content="処理開始" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="80" Click="btnExec_Click"/>
        <Button x:Name="btnClose" Content="終了" HorizontalAlignment="Left" Margin="387,64,0,0" VerticalAlignment="Top" Width="80" Click="btnClose_Click"/>

    </Grid>
</Window>
